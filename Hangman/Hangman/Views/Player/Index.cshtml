@model IEnumerable<Player>
@{
    ViewData["Title"] = "Hiigh Scores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 container">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.RoundTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.GuessingTries)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.GuessedWord)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.RoundTime)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.GuessingTries)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.GuessedWord)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no available scores...</p>
    }
    <div class="col-4 offset-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-success btn-lg">PLAY AGAIN</a>
    </div>
</div>

